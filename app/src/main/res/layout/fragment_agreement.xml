<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/agreement_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mypage.AgreementFragment">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="109dp"
        android:layout_marginStart="15dp"
        android:text="추억을 만들기 위해서는\n약관 동의가 필요해요"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/rose600"/>

    <CheckBox
        android:id="@+id/cb_agree_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:button="@drawable/check_agree_resize"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/cb_agree_all"
        app:layout_constraintStart_toEndOf="@id/cb_agree_all"
        android:layout_marginStart="5dp"
        android:text="전체 동의"
        android:textSize="14sp"
        android:textColor="@color/black" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cb_agree_all"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#F2AAB7" />

    <CheckBox
        android:id="@+id/cb_agree1"
        android:layout_width="11dp"
        android:layout_height="10dp"
        android:button="@drawable/custom_checkbox"
        android:checked="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line"
        android:layout_marginTop="18dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_agree1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cb_agree1"
        app:layout_constraintTop_toTopOf="@id/cb_agree1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-5dp"
        android:text="만 14세 이상입니다"
        android:textSize="14sp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_agree1"
        app:layout_constraintTop_toTopOf="@id/cb_agree1"
        android:layout_marginStart="4dp"
        android:layout_marginTop="-5dp"
        android:text="[필수]"
        android:textSize="14sp"
        android:textColor="#F15F79"/>

    <CheckBox
        android:id="@+id/cb_agree2"
        android:layout_width="11dp"
        android:layout_height="10dp"
        android:button="@drawable/custom_checkbox"
        android:checked="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cb_agree1"
        android:layout_marginTop="18dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_agree2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cb_agree1"
        app:layout_constraintTop_toTopOf="@id/cb_agree2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-5dp"
        android:text="서비스 이용약관 동의"
        android:textSize="14sp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_agree2"
        app:layout_constraintTop_toTopOf="@id/cb_agree2"
        android:layout_marginStart="4dp"
        android:layout_marginTop="-5dp"
        android:text="[필수]"
        android:textSize="14sp"
        android:textColor="#F15F79"/>

    <TextView
        android:id="@+id/tv_agree2_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_agree2"
        android:layout_marginEnd="15dp"
        android:background="@drawable/tv_underscore_black"
        android:text="내용보기"
        android:textSize="14sp"
        android:textColor="#5F5F5F"/>


    <CheckBox
        android:id="@+id/cb_agree3"
        android:layout_width="11dp"
        android:layout_height="10dp"
        android:button="@drawable/custom_checkbox"
        android:checked="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cb_agree2"
        android:layout_marginTop="18dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_agree3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cb_agree3"
        app:layout_constraintTop_toTopOf="@id/cb_agree3"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-5dp"
        android:text="개인정보 수집 및 이용 동의"
        android:textSize="14sp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_agree3"
        app:layout_constraintTop_toTopOf="@id/cb_agree3"
        android:layout_marginStart="4dp"
        android:layout_marginTop="-5dp"
        android:text="[필수]"
        android:textSize="14sp"
        android:textColor="#F15F79"/>

    <TextView
        android:id="@+id/tv_agree3_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_agree3"
        android:layout_marginEnd="15dp"
        android:background="@drawable/tv_underscore_black"
        android:text="내용보기"
        android:textSize="14sp"
        android:textColor="#5F5F5F"/>

    <CheckBox
        android:id="@+id/cb_agree4"
        android:layout_width="11dp"
        android:layout_height="10dp"
        android:button="@drawable/custom_checkbox"
        android:checked="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cb_agree3"
        android:layout_marginTop="18dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_agree4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cb_agree4"
        app:layout_constraintTop_toTopOf="@id/cb_agree4"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-5dp"
        android:text="마케팅 정보 수신 동의 [선택]"
        android:textSize="14sp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="328dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_next_black"
        android:text="다음"
        android:clickable="false"
        android:textSize="15sp"
        android:textColor="#FFFCFC"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>