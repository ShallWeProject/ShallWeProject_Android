<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mypage.AgreementFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="추억을 만들기 위해서는\n약관 동의가 필요해요"
        android:textSize="18sp"
        android:textColor="@color/rose600"/>

    <ImageButton
        android:id="@+id/iv_ag"
        android:layout_width="19dp"
        android:layout_height="19dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:background="@drawable/check_agree"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toEndOf="@id/iv_ag"
        android:text="전체 동의"
        android:textSize="14sp"
        android:textColor="@color/black" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_ag"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#F2AAB7" />

    <ImageButton
        android:id="@+id/iv_agree1"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:background="@drawable/check_agree_unchecked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line"
        android:layout_marginTop="18dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_agree1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_agree1"
        app:layout_constraintTop_toTopOf="@id/iv_agree1"
        android:text="만 14세 이상입니다"
        android:textSize="14sp"
        android:textColor="@color/black"/>

    <ImageButton
        android:id="@+id/iv_agree2"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:background="@drawable/check_agree_unchecked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_agree1"
        android:layout_marginTop="18dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_agree2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_agree1"
        app:layout_constraintTop_toTopOf="@id/iv_agree2"
        android:text="서비스 이용약관 동의"
        android:textSize="14sp"
        android:textColor="@color/black"/>

    <ImageButton
        android:id="@+id/iv_agree3"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:background="@drawable/check_agree_unchecked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_agree2"
        android:layout_marginTop="18dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_agree3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_agree3"
        app:layout_constraintTop_toTopOf="@id/iv_agree3"
        android:text="개인정보 수집 및 이용 동의"
        android:textSize="14sp"
        android:textColor="@color/black"/>

    <ImageButton
        android:id="@+id/iv_agree4"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:background="@drawable/check_agree_unchecked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_agree3"
        android:layout_marginTop="18dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_agree4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_agree4"
        app:layout_constraintTop_toTopOf="@id/iv_agree4"
        android:text="마케팅 정보 수신 동의 [선택]"
        android:textSize="14sp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="328dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_next"
        android:text="다음"
        android:textSize="15sp"
        android:textColor="#FFFCFC"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>