<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".giftExperience.GiftExperienceFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/gift_experience_layout"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView

        android:id="@+id/giftreserve_text01"
        android:layout_width="49dp"
        android:layout_height="17dp"
        android:layout_marginTop="20dp"
        android:text="보내는분"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_goneMarginTop="10dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/giftreserve_edittext01"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>
    <EditText
        android:id="@+id/giftreserve_edittext01"
        android:layout_width="328dp"
        android:layout_height="39dp"
        android:background="@drawable/edittext_design02"
        android:hint="    이름을 입력해주세요"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/giftreserve_text01" />

    <TextView
        android:background="#FEF3F2"
        android:layout_marginTop="10dp"
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintTop_toBottomOf="@+id/giftreserve_edittext01"/>




    <TextView
        android:id="@+id/giftreserve_text02"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:textColor="@color/black"
        android:text="받는분"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/giftreserve_edittext02"
        app:layout_constraintTop_toBottomOf="@+id/space" />

        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/alert"
            app:layout_constraintTop_toBottomOf="@+id/giftreserve_text02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/alert"></ImageView>
    <EditText
        android:background="@drawable/edittext_design"
        android:id="@+id/spinner"
        android:layout_width="103dp"
        android:textSize="12dp"
        android:text="010"
        android:gravity="center"
        android:layout_height="39dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/giftreserve_text02"
        app:layout_constraintTop_toBottomOf="@+id/giftreserve_edittext02" />

    <EditText
        android:textSize="12dp"
        android:id="@id/giftreserve_edittext04"
        android:layout_width="103dp"
        android:layout_height="39dp"
        android:gravity="center"
        android:background="@drawable/edittext_design02"
        app:layout_constraintLeft_toRightOf="@id/spinner"
        app:layout_constraintTop_toBottomOf="@+id/giftreserve_edittext02"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <EditText
        android:textSize="12dp"
        android:id="@id/giftreserve_edittext05"
        android:layout_width="103dp"
        android:layout_height="39dp"
        android:gravity="center"
        android:background="@drawable/edittext_design02"
        app:layout_constraintLeft_toRightOf="@id/giftreserve_edittext04"
        app:layout_constraintTop_toBottomOf="@+id/giftreserve_edittext02"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />


    <EditText
        android:id="@+id/giftreserve_edittext02"
        android:layout_width="328dp"
        android:layout_height="39dp"
        android:background="@drawable/edittext_design02"
        android:hint="    이름을 입력해주세요"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alert" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/space02"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#FEF3F2"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:id="@+id/giftreserve_text03"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/giftreserve_edittext03"
        android:text="초대장"
        app:layout_constraintTop_toBottomOf="@+id/space02">

    </TextView>

    <EditText
        android:id="@+id/giftreserve_edittext03"
        android:layout_width="320dp"
        android:layout_height="212dp"
        android:background="@drawable/invitation"
        android:hint="     내용을 입력해주세요 "
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/giftreserve_text03" />

    <ImageButton
        android:id="@id/giftreserve_btn01"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/add_image"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/giftreserve_edittext03"
        app:layout_constraintTop_toBottomOf="@+id/giftreserve_edittext03">

    </ImageButton>

    <Button
        android:id="@+id/giftreserve_btn02"
        android:layout_width="328dp"
        android:layout_height="39dp"
        android:background="@drawable/gift_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/giftreserve_btn01" />


        </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>