<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_cancel_reserv"
    android:padding="24dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_cancel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="예약을 취소하시겠습니까?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#1D1B20"/>

    <TextView
        android:id="@+id/tv_cancel_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="24시간 내로 작가님께서 환불 절차 관련 문자를 발송하여 주실 예정입니다. 문자로 안내드리는 절차에 따라 환불 절차 진행 부탁드립니다."
        android:textSize="13sp"
        android:textColor="#333333"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_cancel_description"
            app:layout_constraintEnd_toStartOf="@id/btn_cancel_reservation"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:text="아니오"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_cancel_reservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_cancel_description"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/btn_cancel_reservation"
            android:outlineProvider="none"
            android:text="예약 취소"
            android:textSize="14sp"
            android:textColor="@color/rose600"
            android:textStyle="bold" />
</LinearLayout>

</LinearLayout>