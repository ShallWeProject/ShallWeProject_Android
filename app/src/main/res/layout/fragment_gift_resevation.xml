<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".giftExperience.GiftResevationFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gift_reservation_layout"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:id="@+id/exgift_text01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="경험 선택"
            android:textStyle="bold"
            android:layout_margin="25dp"
            android:textSize="12dp"></TextView>

        <androidx.cardview.widget.CardView
            android:translationZ="-100dp"
            android:id="@+id/exgift_image01"
            android:layout_width="170dp"
            android:layout_height="120dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            app:layout_constraintTop_toBottomOf="@id/exgift_text01"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/samplePic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/detail_ex"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@id/exgift_text02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@id/exgift_text01"
            android:text="[성수]"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/exgift_image01"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@id/exgift_text03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/exgift_text01"
            android:text="인기 베이킹 클래스"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/exgift_text02"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@id/exgift_text04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:text="기념일 레터링 케이크\n사지말고 함께 만들어요"
            app:layout_constraintTop_toBottomOf="@id/exgift_text03"
            app:layout_constraintLeft_toRightOf="@id/exgift_image01"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/page_01"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/rose50"
            app:layout_constraintTop_toBottomOf="@id/exgift_image01"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/exgift_text05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="인원수"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/page_01"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:textColor="@color/black"/>

        <Button
            android:translationZ="-100dp"
            android:id="@id/exgift_btn01"
            android:layout_width="35dp"
            android:layout_height="38dp"
            android:backgroundTint="#FFE4E8"
            android:text="−"
            android:textStyle="bold"
            android:textSize="17dp"
            app:layout_goneMarginTop="5dp"
            android:textColor="#EF7195"
            android:textAlignment="inherit"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/exgift_text05" />

        <TextView
            android:textColor="@color/black"
            android:id="@id/exgift_text06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/exgift_btn01"
            android:text="2"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="13dp"
            android:textSize="22dp"
            app:layout_constraintTop_toBottomOf="@id/exgift_text05"/>

        <Button
            android:id="@id/exgift_btn02"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:text="+"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:backgroundTint="#EF7195"
            android:layout_marginLeft="13dp"
            app:layout_constraintLeft_toRightOf="@id/exgift_text06"
            app:layout_constraintTop_toBottomOf="@id/exgift_text05">

        </Button>

        <TextView
            android:id="@+id/page_02"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/rose50"
            app:layout_constraintTop_toBottomOf="@id/exgift_btn01"
            android:layout_marginTop="10dp"/>
        <TextView

            android:id="@+id/giftreserve_text01"
            android:layout_width="49dp"
            android:layout_height="17dp"
            android:layout_marginTop="20dp"
            android:text="보내는분"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/giftreserve_edittext01"
            app:layout_constraintTop_toBottomOf="@id/exgift_btn01" />

        <EditText
            android:id="@+id/giftreserve_edittext01"
            android:layout_width="328dp"
            android:layout_height="39dp"
            android:background="@drawable/edittext_design02"
            android:hint="    이름을 입력해주세요"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/giftreserve_text01" />
        
        <TextView
            android:background="#FEF3F2"
            android:layout_marginTop="10dp"
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            app:layout_constraintTop_toBottomOf="@+id/giftreserve_edittext01"/>

        <TextView
            android:id="@+id/giftreserve_text02"
            android:layout_marginTop="10dp"
            android:layout_width="36dp"
            android:layout_height="17dp"
            android:textColor="@color/black"
            android:text="받는 분"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/giftreserve_edittext02"
            app:layout_constraintTop_toBottomOf="@+id/space" />

        <Spinner
            android:background="@drawable/edittext_design02"
            android:id="@+id/spinner"
            android:layout_width="103dp"
            android:textSize="12dp"
            android:layout_height="39dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/giftreserve_edittext02"
            app:layout_constraintTop_toBottomOf="@+id/giftreserve_edittext02" />

        <EditText
            android:textSize="12dp"
            android:id="@id/giftreserve_edittext04"
            android:layout_width="103dp"
            android:layout_height="39dp"
            android:background="@drawable/edittext_design02"
            app:layout_constraintLeft_toRightOf="@id/spinner"
            app:layout_constraintTop_toBottomOf="@id/giftreserve_edittext02"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />
        <EditText
            android:textSize="12dp"
            android:id="@id/giftreserve_edittext05"
            android:layout_width="103dp"
            android:layout_height="39dp"
            android:background="@drawable/edittext_design02"
            app:layout_constraintLeft_toRightOf="@id/giftreserve_edittext04"
            app:layout_constraintTop_toBottomOf="@id/giftreserve_edittext02"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />


        <EditText
            android:id="@+id/giftreserve_edittext02"
            android:layout_width="328dp"
            android:layout_height="39dp"
            android:background="@drawable/edittext_design02"
            android:hint="    이름을 입력해주세요"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/giftreserve_text02" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/space02"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#FEF3F2"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />


        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:id="@+id/giftreserve_text03"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintLeft_toLeftOf="@+id/giftreserve_edittext03"
            android:text="초대장"
            app:layout_constraintTop_toBottomOf="@+id/space02">
            
        </TextView>

        <EditText
            android:id="@+id/giftreserve_edittext03"
            android:layout_width="320dp"
            android:layout_height="212dp"
            android:background="@drawable/invitation"
            android:hint="     내용을 입력해주세요 "
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/giftreserve_text03" />

        <ImageButton
            android:id="@id/giftreserve_btn01"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/add_image"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@id/giftreserve_edittext03"
            app:layout_constraintTop_toBottomOf="@+id/giftreserve_edittext03">

        </ImageButton>

        <ImageButton
            android:id="@+id/giftreserve_btn02"
            android:layout_width="328dp"
            android:layout_height="39dp"
            android:background="@drawable/btn_pay"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="@id/giftreserve_edittext03"
            app:layout_constraintTop_toBottomOf="@+id/giftreserve_btn01"
            app:layout_constraintBottom_toBottomOf="parent">

        </ImageButton>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>