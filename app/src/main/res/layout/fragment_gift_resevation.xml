<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".giftExperience.GiftResevationFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gift_reservation_layout"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/exgift_text01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"
            android:text="경험 선택"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/exgift_image01"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:translationZ="-100dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/exgift_text01"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/samplePic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/detail_ex" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@id/exgift_text02"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@id/exgift_text01"
            android:text="[성수] 인기 베이킹 클래스"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/exgift_image01"
            android:textStyle="bold"/>


        <TextView
            android:id="@id/exgift_text04"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="기념일 레터링 케이크\n사지말고 함께 만들어요"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintLeft_toRightOf="@id/exgift_image01"
            app:layout_constraintTop_toBottomOf="@id/exgift_text02" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="30,800원"
            android:textColor="#E31B54"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/exgift_text04"
            app:layout_constraintTop_toBottomOf="@+id/exgift_text04" />

        <View
            android:id="@+id/page_01"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="10dp"
            android:background="#66FEF3F2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/exgift_image01" />

        <TextView
            android:id="@+id/exgift_text05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="인원수"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/page_01" />

        <Button
            android:id="@id/exgift_btn01"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_minus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/exgift_text05" />

        <TextView
            android:id="@id/exgift_text06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/exgift_btn01"
            app:layout_constraintLeft_toRightOf="@+id/exgift_btn01"
            app:layout_constraintTop_toTopOf="@+id/exgift_btn01" />

        <Button
            android:id="@id/exgift_btn02"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_plus"
            android:textColor="@color/white"
            app:layout_constraintLeft_toRightOf="@id/exgift_text06"
            app:layout_constraintTop_toBottomOf="@id/exgift_text05">

        </Button>

        <View
            android:id="@+id/page_02"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="16dp"
            android:background="#66FEF3F2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/exgift_btn01" />

        <TextView
            android:id="@id/exgift_text07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="예약 일시"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/page_02" />


        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/calender_design"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exgift_text07"
            app:mcv_showOtherDates="all"
            android:theme="@style/CalenderViewCustom"
            app:mcv_dateTextAppearance="@style/CalenderViewDateCustomText"
            app:mcv_weekDayTextAppearance="@style/CalenderViewWeekCustomText"/>

        <Button
            android:id="@+id/exgift_btn03"
            android:layout_width="328dp"
            android:layout_height="39dp"
            android:layout_marginTop="59dp"
            android:drawableLeft="@drawable/gift_fill"
            android:text="선물하기"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAlignment="textStart"
            android:drawablePadding="6dp"
            android:paddingStart="122dp"
            android:background="@drawable/gift_btn_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>