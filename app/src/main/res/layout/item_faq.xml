<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cv_faq_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/iv_question"
            android:background="#FEF3F2" />
        <ImageView
            android:id="@+id/iv_question"
            android:layout_width="25dp"
            android:layout_height="23dp"
            app:layout_constraintTop_toBottomOf="@id/view_line"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/img_question"/>

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_line"
            app:layout_constraintStart_toEndOf="@+id/iv_question"
            android:layout_marginStart="12dp"
            android:layout_marginTop="13dp"
            android:text="예약을 변경하고 싶어요."
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#F15F79" />

        <ImageView
            android:id="@+id/iv_answer"
            android:layout_width="25dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_question"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/img_answer"/>

        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="27dp"
            android:text="예약을 변경하고 싶어요."
            android:textColor="#454545"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_answer"
            app:layout_constraintTop_toBottomOf="@id/iv_question" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>