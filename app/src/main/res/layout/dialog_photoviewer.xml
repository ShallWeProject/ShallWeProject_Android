<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_cancel_reserv"
    android:padding="24dp"
    android:layout_margin="24dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout_context"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/dialog_agreement"
    android:padding="24dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    tools:ignore="MissingConstraints">


    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@id/layout_context"
        app:layout_constraintEnd_toEndOf="@id/layout_context"
        android:layout_marginBottom="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>

<Button
    android:id="@+id/btn_close"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/layout_context"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="10dp"
    android:background="@drawable/btn_cancel_reservation"
    android:outlineProvider="none"
    android:text="닫기"
    android:textColor="@color/rose600"
    android:textSize="14sp"
    android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>

