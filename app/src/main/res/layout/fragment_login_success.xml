<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup.LoginSuccessFragment"
    android:id="@+id/login_success_layout">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    >

    <ImageView
        android:id="@+id/gifted"
        android:layout_width="314dp"
        android:layout_height="201dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/img_success"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="28dp"
        android:text="로그인 완료!"
        android:textColor="#E31B54"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/gifted"
        app:layout_constraintEnd_toEndOf="@+id/gifted"
        app:layout_constraintStart_toStartOf="@+id/gifted"></TextView>


    <TextView
        android:id="@+id/tv_login_description"
        android:text="지금 바로 셸위의 다양한 서비스를\n이용하실 수 있습니다"
        android:textSize="14sp"
        android:textColor="#454545"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/gifted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/btn_home"
        android:layout_width="328dp"
        android:layout_height="39dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/btn_next"
        android:text="홈으로"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_login_description">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>