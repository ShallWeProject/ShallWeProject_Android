<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Shall_we" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Shall_we" parent="Base.Theme.Shall_we" />

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.AppCompat.Light.NoActionBar">
        // Set the splash screen background, animated icon, and animation duration.
        <!-- API 31+ specific attributes -->
        <item name="android:windowSplashScreenBackground">#FFF0F2</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_splash</item>
        # animated icons

        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/Theme.Shall_we</item>  # Required.


    </style>
    <style name="tabTextSize" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <!-- 배경 -->

        <item name="android:textColorPrimary">@color/rose600</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">#EDA5B2</item>     <!-- 탭바 텍스트 -->

        <item name="colorAccent">@color/rose600</item><!-- 하단 움직이는 바 색-->
    </style>

</resources>